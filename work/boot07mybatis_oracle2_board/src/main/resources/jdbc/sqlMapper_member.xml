<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="test.com.member.mapper.MemberMapper">


 	<select id="selectAll"
		resultType="test.com.member.model.MemberVO">
		select * from member order by num desc
	</select>

	<select id="searchListName"
		resultType="test.com.member.model.MemberVO">
		select * from member where name like #{searchWord} order by
		num desc
	</select>

	<select id="searchListId"
		resultType="test.com.member.model.MemberVO">
		select * from member where id like #{searchWord} order by
		num desc
	</select>

	<select id="selectOne"
		resultType="test.com.member.model.MemberVO">
		select * from member where num=#{num}
	</select>

	<insert id="insertOK">
		insert into member(num,id,pw,name,tel)
		values(seq_member.nextval,#{id},#{pw},#{name},#{tel})
	</insert>

	<update id="updateOK">
		update member set
		id=#{id},pw=#{pw},name=#{name},tel=#{tel} where num=#{num}
	</update>

	<delete id="deleteOK">
		delete from member where num=#{num}
	</delete> 
</mapper>